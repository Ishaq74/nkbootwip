            <Button ariaLabel="Alerte" text="Attention" backgroundColor="warning" textColor="black" border={true} shadow={true} shape="rounded" icon={{ name: 'mdi:alert', side: 'left' }} />
            <!-- Bouton surface sombre -->
            <Button ariaLabel="Sombre" text="Sombre" backgroundColor="surface-dark" textColor="text" border={true} shadow={true} shape="rounded" icon={{ name: 'mdi:eye-off', side: 'left' }} />
            </Wrapper>
        </Section>
    </Wrapper>
</Section>
