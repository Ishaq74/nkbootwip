---
// src/components/molecules/Slider.astro
// Composant Slider générique et réutilisable

interface Props {
  className?: string;        // Classes CSS additionnelles pour le conteneur principal du slider.
  gap?: string;              // Espacement entre les éléments du slider (ex: '1rem', '20px').
  itemMinWidth?: string;     // Largeur minimale des éléments du slider (ex: '280px', 'clamp(200px, 80%, 400px)').
  showScrollbar?: boolean;   // Si 'true', la barre de défilement sera visible.
}

const {
  className = '',
  gap = '1.5rem',
  itemMinWidth = '280px',
  showScrollbar = false,
} = Astro.props;
---

<div
  class:list={["generic-slider-wrapper", className]}
  style={`
    --slider-gap: ${gap};
    --slider-item-min-width: ${itemMinWidth};
    ${showScrollbar ? '' : '--slider-scrollbar-display: none;'}
  `}
>
  <ul class="slider-list">
    <slot /> {/* Tous les éléments enfants seront insérés ici */}
  </ul>
</div>

<style is:inline>
  .generic-slider-wrapper {
    padding: var(--slider-gap);
    overflow: hidden;
    position: relative;
  }

  .slider-list {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    gap: var(--slider-gap);
    padding: 0;
    margin: 0;
    list-style: none;
    -webkit-overflow-scrolling: touch; /* Améliore le défilement sur iOS */

    scrollbar-width: var(--slider-scrollbar-display, none); /* Firefox */
    -ms-overflow-style: var(--slider-scrollbar-display, none); /* IE and Edge */
  }

  /* Masquer la barre de défilement pour Webkit (Chrome, Safari, Edge) */
  .slider-list::-webkit-scrollbar {
    display: var(--slider-scrollbar-display, none);
  }

  /* Styles de la barre de défilement si visible */
  .slider-list::-webkit-scrollbar-thumb {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
  }
  .slider-list::-webkit-scrollbar-track {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .slider-list > * {
    flex: 0 0 var(--slider-item-min-width);
    min-width: var(--slider-item-min-width);
    scroll-snap-align: start;
    scroll-snap-stop: always;
    box-sizing: border-box;

    /* Styles par défaut pour les éléments du slider */
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    background-color: white;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
</style>